/*
	
	PADROES

*/	

.glyphicon, glyphicon:before {
	font-family: @fonteGlyphiconsHalflings !important;
}

.limitar-pagina {
	/*max-width: 1200px;*/
}

/* ALTURA-COMPLETA */
.altura-completa {
	height: 100%;
}
	@media only screen and (min-width: @minXS) and (max-width: @maxXS) {
		.altura-completa-xs {
			height: 100%;
		}
	}
	@media only screen and (min-width: @minSM) and (max-width: @maxSM) {
		.altura-completa-sm {
			height: 100%;
		}
	}
	@media only screen and (min-width: @minMD) and (max-width: @maxMD) {
		.altura-completa-md {
			height: 100%;
		}
	}
	@media only screen and (min-width: @minLG) {
		.altura-completa-lg {
			height: 100%;
		}
	}

/* BTN-PADRAO */
.btn-padrao {
	.setTransition(all 500ms cubic-bezier(0.250, 0.100, 0.250, 1.000));
}
	@media only screen and (min-width: @minXS) and (max-width: @maxXS) {
		.btn-padrao {
			margin: 0 0 10px 0;
			width: 100%;
		}
	}

/* FRM-GRP-PADRAO */
.frm-grp-padrao {
	margin: 10px 0px;
	.setTransition(all 500ms cubic-bezier(0.250, 0.100, 0.250, 1.000));
}

/* LARGURA-COMPLETA */
.largura-completa {
	width: 100%;
}
